            ]
        },
        "outputs": {
            "kind": "ResourceGroup",
            "location": "[steps('basics').resourceScope.location.name]",
            "resourceGroupId": "[steps('basics').resourceScope.resourceGroup.id]",
            "parameters": {
                "location": "[steps('basics').location]",
                "appName": "[steps('basics').appName]",
                "vnetAddressSpace": "[steps('networking').vnetAddressSpace]",
                "snetDefaultAddressSpace": "[steps('networking').snetDefaultAddressSpace]",
                "snetWebAppAddressSpace": "[steps('networking').snetWebAppAddressSpace]",
                "env": "[steps('basics').env]",
                "deployLogAnalyticsWs": "[steps('basics').deployLogAnalyticsWs]",
                "logAnalyticsWsName": "[steps('basics').logAnalyticsWsName]",
                "subnetNameDefault": "[steps('networking').subnetNameDefault]",
                "subnetNameAsp": "[steps('networking').subnetNameAsp]",
                "aspServerOS": "[steps('basics').aspServerOS]",
