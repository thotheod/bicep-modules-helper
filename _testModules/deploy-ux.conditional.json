{
    "$schema": "https://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "Deploy Web App for Containers",
            "steps": [
                {
                    "name": "basics",
                    "label": "Basics",
                    "elements": [ 
